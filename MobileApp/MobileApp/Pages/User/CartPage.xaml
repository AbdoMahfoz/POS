<?xml version="1.0" encoding="utf-8" ?>
<freshMvvm:FreshBaseContentPage
    x:Class="MobileApp.Pages.User.CartPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:freshMvvm="clr-namespace:FreshMvvm;assembly=FreshMvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Style="{StaticResource ColoredNavBar}"
    mc:Ignorable="d">
    <freshMvvm:FreshBaseContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding CloseCommand}" IconImageSource="cancel.png" />
    </freshMvvm:FreshBaseContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <RefreshView
                Command="{Binding PulltoRefreshCommand}"
                IsRefreshing="{Binding IsRefreshing}"
                RefreshColor="{StaticResource SecColor}">
                <CollectionView
                    x:Name="CollectionView"
                    HorizontalOptions="Fill"
                    ItemSizingStrategy="MeasureFirstItem"
                    ItemsSource="{Binding CartItems}"
                    SelectionMode="Single"
                    VerticalOptions="FillAndExpand">
                    <CollectionView.EmptyView>
                        <Label
                            HorizontalOptions="CenterAndExpand"
                            Text="You cart is Empty :'("
                            VerticalOptions="CenterAndExpand" />
                    </CollectionView.EmptyView>
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!--<SwipeView Padding="0"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem
                                            BackgroundColor="Red"
                                            Command="{Binding Source={x:Reference CollectionView}, Path=BindingContext.DeleteCommand}"
                                            CommandParameter="{Binding .}"
                                            IconImageSource="delete.png"
                                            Text="Delete" />
                                    </SwipeItems>
                                </SwipeView.RightItems>-->
                            <Frame
                                Padding="10"
                                BackgroundColor="White"
                                BorderColor="{StaticResource BorderGrey}"
                                CornerRadius="10"
                                HasShadow="True"
                                HeightRequest="75"
                                HorizontalOptions="Center"
                                IsClippedToBounds="True"
                                WidthRequest="150">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        HeightRequest="100"
                                        HorizontalOptions="Center"
                                        Source="{Binding Logo}"
                                        VerticalOptions="Center"
                                        WidthRequest="100" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="Title"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="{StaticResource MainColor}"
                                        VerticalOptions="Center" />

                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="Medium"
                                        HorizontalOptions="Center"
                                        Text="{Binding Price}"
                                        TextColor="Gray"
                                        VerticalOptions="Center" />

                                </Grid>
                            </Frame>
                            <!--</SwipeView>-->
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </RefreshView>
            <Button
                Command="{Binding AddToCartCommand}"
                Style="{StaticResource ButtonStyle}"
                Text="Checkout" />
        </StackLayout>
    </ContentPage.Content>
</freshMvvm:FreshBaseContentPage>